{
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "target": "ES5",
    "module": "ES2015",
    "jsx": "react",
    "moduleResolution": "node",
    "paths": {
      "~/*": ["src/*"],
    },
    "baseUrl": "./",
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        // TODO ルールをまともにする ref: https://github.com/Microsoft/typescript-styled-plugin#linting
        "lint": {
          "vendorPrefix": "error",
          "zeroUnits": "warning"
        }
      }
    ]
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
  ]
}